<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">
  <variable name="verbose" value="${longdate} | ${machinename} | ${processname} | ${processid} | ${threadid} | ${level} | ${logger} | ${message} ${exception:format=ToString}" />
  <targets async="true">
    <target name="fileLog" xsi:type="File" layout="${verbose}" fileName="${basedir}/Service.log" archiveFileName="${basedir}/Service.{#####}.log" archiveAboveSize="10485760" concurrentWrites="false" maxArchiveFiles="50" archiveNumbering="Rolling" />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="fileLog" />
  </rules>
</nlog>
