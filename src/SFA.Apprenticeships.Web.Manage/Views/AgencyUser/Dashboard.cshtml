@using SFA.Apprenticeships.Web.Manage.Constants
@model SFA.Apprenticeships.Web.Manage.ViewModels.AgencyUserViewModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grid-wrapper">
    <div class="grid grid-2-3">
        <div class="inner-block-padr">
            <h1 class="heading-xlarge">
                Agency home
            </h1>
        </div>
    </div>
    <div class="grid grid-1-3">
        @using (Html.BeginRouteForm(ManagementRouteNames.Dashboard, FormMethod.Post))
        {
            <div class="page-link">
                <div class="form-group">
                    <p class="form-label">Change role</p>
                    @Html.DropDownListFor(m => m.RoleId, Model.Roles)
                </div>
            </div>
            <div class="page-link">
                <div class="form-group">
                    <p class="form-label">Change team</p>
                    @Html.DropDownListFor(m => m.TeamId, Model.Teams)
                </div>
            </div>
            <div>
                <button class="button">Save</button>
            </div>
        }
    </div>
</div>