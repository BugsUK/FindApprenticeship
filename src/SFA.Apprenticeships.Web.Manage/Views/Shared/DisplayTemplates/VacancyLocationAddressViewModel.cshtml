@model SFA.Apprenticeships.Web.Raa.Common.ViewModels.VacancyPosting.VacancyLocationAddressViewModel

@{
    <tr>
        <td>
            @Model.Address.AddressLine1
            @if (!string.IsNullOrWhiteSpace(@Model.Address.AddressLine2))
            {
                <br />@Model.Address.AddressLine2
            }
            <br />@Model.Address.AddressLine4 @Model.Address.Postcode
        </td>
        <td>
            <span type="text">@Model.NumberOfPositions</span>
        </td>
    </tr>
}
