@model SFA.Apprenticeships.Web.Common.ViewModels.DateViewModel

<div class="form-group">
    <fieldset>
        <legend>
            <span class="form-label-bold">@Html.DisplayNameFor(m => m)</span>
            <span class="form-hint" id="example-dob-hint">For example, 31 3 1980</span>
            @Html.ValidationMessageFor(m => m.Date)
        </legend>
        <div class="form-date">
            <div class="form-group form-group-day">
                <label class="form-label-bold" for="example-dob-day">Day</label>
                @Html.TextBoxFor(m => m.Day, new { type = "number", pattern = "[0-9]*", min = "0", max = "31" })
                @*<input class="form-control" id="example-dob-day" name="dob-day" type="number" pattern="[0-9]*" min="0" max="31" aria-describedby="example-dob-hint">*@
            </div>
            <div class="form-group form-group-month">
                <label class="form-label-bold" for="example-dob-month">Month</label>
                @Html.TextBoxFor(m => m.Month, new { pattern = "[0-9]*", min = "0", max = "12" })
                @*<input class="form-control" id="example-dob-month" name="dob-month" type="number" >*@
            </div>
            <div class="form-group form-group-year">
                <label class="form-label-bold" for="example-dob-year">Year</label>
                @Html.TextBoxFor(m => m.Year, new { pattern = "[0-9]*", min = "0", max = "2016" })
                @*<input class="form-control" id="example-dob-year" name="dob-year" type="number" >*@
            </div>
        </div>
    </fieldset>
</div>

