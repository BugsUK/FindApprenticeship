@model string

@{
    var state = string.IsNullOrWhiteSpace(Model) ? string.Empty : "open";
}

<details class="@state" @state>
    <summary>@ViewData["Label"]</summary>
    <div class="detail-content qa-comment">
        <div class="blocklabel-single-container">
            @Html.TextAreaFor(m => m, new { @class = "width-all-1-1 form-textarea-medium", type = "text" })
        </div>
    </div>
</details>