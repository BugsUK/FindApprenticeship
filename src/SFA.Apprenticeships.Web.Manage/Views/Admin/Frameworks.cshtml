@using System.Web.Mvc.Html
@using SFA.Apprenticeships.Domain.Entities.Raa.Vacancies
@model List<SFA.Apprenticeships.Domain.Entities.ReferenceData.Category>
@{
    ViewBag.Title = "Frameworks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 id="heading" class="heading-xlarge">Frameworks</h1>

<table>
    <tr>
        <th>ID</th>
        <th>SSAT1</th>
        <th>Frameworks</th>
        <th>Status</th>
    </tr>

    @foreach (var item in Model)
    {
        foreach (var subCategorys in item.SubCategories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => subCategorys.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => subCategorys.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => subCategorys.Status)
                </td>
            </tr>
        }
    }
</table>
