@model LoginViewModel

@{
    ViewBag.Title = "Sign in or Create an account - Find an apprenticeship";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("ValidationSummary", ViewData.ModelState)

<div class="grid-wrapper">
    <div class="grid grid-1-2">
        @using (Html.BeginRouteForm(RouteNames.SignIn, FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            <h1 class="heading-large">Sign in</h1>
            <p class="hide-tablet">
                @Html.ActionLink("Create an account", controllerName: "Register", actionName: "Index").
            </p>

            @Html.FormTextFor(
                m => m.EmailAddress,
                containerHtmlAttributes: new { @class = "form-group-compound" },
                controlHtmlAttributes: new { @class = "form-control-3-4", type = "email", autofocus = "autofocus", spellcheck = "false" })

            <div class="form-group">
                <a id="password"></a>
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-3-4" })
                @Html.ValidationMessageFor(m => m.Password, null)

                <p><a href='@Url.RouteUrl(RouteNames.ForgottenCredentials)'>I can't access my account</a></p>
            </div>

            <div class="form-group">
                <button class="button" id="sign-in-button">Sign in</button>
                <details class="text hide-tablet">
                    <summary>Activate your account</summary>
                    <div class="detail-content">
                        <ol class="list-number">
                            <li>Once you've created an account we'll send you an activation code.</li>
                            <li>Sign in using your email address and password.</li>
                            <li>You'll then be asked to enter your activation code.</li>
                        </ol>
                    </div>
                </details>
            </div>
        }
    </div>
    <div class="grid grid-1-2">
        <h2 class="heading-large">New user?</h2>
        <div class="text">
            <p>
                If you haven’t used this service before you must
                @Html.ActionLink("create an account", "Index", "Register", null, new { id = "create-account-link", @class = "inl-block" }).
            </p>
            <p class="small-btm-margin">Creating an account allows you to:</p>
            <ul class="list-bullet">
                <li>apply for an apprenticeship or traineeship</li>
                <li>track your apprenticeship applications</li>
                <li>receive alerts about new apprenticeships</li>
            </ul>
        </div>
        <details class="text hide-mob">
            <summary>Activate your account</summary>
            <div class="detail-content">
                <ol class="list-number">
                    <li>Once you've created an account we'll send you an activation code.</li>
                    <li>Sign in using your email address and password.</li>
                    <li>You'll then be asked to enter your activation code.</li>
                </ol>
            </div>
        </details>
    </div>
</div>
