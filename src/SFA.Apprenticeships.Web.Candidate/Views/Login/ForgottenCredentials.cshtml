@model ForgottenCredentialsViewModel

@{
    ViewBag.Title = "Forgotten credentials - Find an apprenticeship";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hgroup">
    <h1 class="heading-large">Can't access your account?</h1>
</div>

@Html.Partial("ValidationSummary", ViewData.ModelState)

@using (Html.BeginForm("ForgottenPassword", "Login", FormMethod.Post, new { @id = "forgotten-password-form" }))
{
    @Html.AntiForgeryToken()
    
    <fieldset class="inner-block-padr">
        <div class="text">
            <h2 class="heading-medium">If you've forgotten your password</h2>
            <p>
                To reset your password we need to send a 6-character code to your
                email address.
            </p>
        </div>
        
        @Html.FormTextFor(m => m.ForgottenPasswordViewModel.EmailAddress, controlHtmlAttributes: new { @class = "linked-input-master", type = "email", spellcheck = "false", autofocus = "autofocus" }, hintHtmlAttributes: new { @class = "text" }, labelText: "Enter email")

        <div class="form-group">
            <button class="button" id="forgottenpassword-button">Send code</button>
        </div>
    </fieldset>
}

<div class="text">
    <h2 class="heading-medium">If your account is locked</h2>
    <p>
        If your account is locked and you’ve been sent a code to unlock it, you
        can <a href="@Url.Action("Unlock", "Login")">enter it</a> now.
    </p>
</div>

@using (Html.BeginForm("ForgottenEmail", "Login", FormMethod.Post, new { @id = "forgotten-email-form" }))
{
    @Html.AntiForgeryToken()

    <div class="text">
        <h2 class="heading-medium">If you've forgotten your email address</h2>
        <details>
            <summary>Retrieve your email address</summary>
            <div class="detail-content">
                <p>
                    To retrieve the email address you used to create your account, you'll need to verify your mobile number. Enter your number and we'll send your email address via text message.
                </p>

                @Html.FormTextFor(m => m.ForgottenEmailViewModel.PhoneNumber, controlHtmlAttributes: new { type = "tel" })

                <div class="form-group">
                    <button class="button" id="forgottenemail-button">Send email address</button>
                </div>
            </div>
        </details>
    </div>
}
