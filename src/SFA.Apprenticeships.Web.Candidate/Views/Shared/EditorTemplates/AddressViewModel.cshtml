@model AddressViewModel

<div id="address-lookup" class="hide-nojs">
    <div class="form-group form-group-compound">
        <label for="post-code" class="form-label">Postcode</label>
        <input id="post-code" type="text" class="form-control form-control-large" autocapitalize="characters" autocorrect="off" value="">
    </div>
    <div class="form-group form-group-compound">
        <a href="#" id="find-addresses" class="button address-find-btn">Find address</a>
    </div>
    <div id="address-list" class="address-find-select form-group toggle-content">
        <label for="address-select" class="form-label">Select your address</label>
        <select id="address-select">
            @if (ViewBag.Addresses != null && ViewBag.Addresses.Count() > 0)
            {
                <option value="void">-- 5 found --</option>
                foreach (AddressViewModel address in ViewBag.Addresses)
                {
                    <option class="address-select-option" value="@address.Uprn">@address.AddressLine1</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <a href="#" class="address-manual-btn">I want to enter address manually</a>
    </div>
</div>

<div id="address-manual" class="address-manual-input panel-indent toggle-content">
    @Html.FormTextFor(m => m.AddressLine1, containerHtmlAttributes: new { @class = "form-group-compound" }, controlHtmlAttributes: new { type = "text", autocorrect = "off" })
    @Html.FormTextFor(m => m.AddressLine2, containerHtmlAttributes: new { @class = "form-group-compound" }, controlHtmlAttributes: new { type = "text", autocorrect = "off" })
    @Html.FormTextFor(m => m.AddressLine3, containerHtmlAttributes: new { @class = "form-group-compound" }, controlHtmlAttributes: new { type = "text", autocorrect = "off" })
    @Html.FormTextFor(m => m.AddressLine4, containerHtmlAttributes: new { @class = "form-group-compound" }, controlHtmlAttributes: new { type = "text", autocorrect = "off" })
    @Html.FormTextFor(m => m.Postcode, containerHtmlAttributes: new { @class = "form-group-compound" }, controlHtmlAttributes: new { @class = "form-control-large", type="text", autocapitalize="characters", autocorrect="off" })
    @Html.HiddenFor(m => m.Uprn)
    @Html.HiddenFor(m => m.GeoPoint.Latitude)
    @Html.HiddenFor(m => m.GeoPoint.Longitude)
</div>
