@model AboutYouViewModel

<fieldset id="applyAboutYou" class="fieldset-with-border">
    <legend class="heading-large">About you</legend>
    <div class="form-group text">
        <details>
            <summary role="button">Help with this section</summary>
            <p class="panel-indent">
                Think carefully about how you answer these questions. Where possible,
                keep the vacancy that you're applying for in mind, and tailor your
                answers to match the role.
            </p>
        </details>
    </div>

    @Html.FormTextAreaFor(m => m.WhatAreYourStrengths, hintHtmlAttributes: new { @class = "text" })
    @Html.FormTextAreaFor(m => m.WhatDoYouFeelYouCouldImprove, hintHtmlAttributes: new { @class = "text" })
    @Html.FormTextAreaFor(m => m.WhatAreYourHobbiesInterests, hintHtmlAttributes: new { @class = "text" })
    @Html.FormTextAreaFor(m => m.AnythingWeCanDoToSupportYourInterview, hintHtmlAttributes: new { @class = "text" })
</fieldset>
