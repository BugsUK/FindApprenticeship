@model SFA.Apprenticeships.Web.Candidate.ViewModels.Candidate.AboutYouViewModel

<fieldset class="fieldset-with-border">
    <legend class="heading-large">About you</legend>
    <div class="form-group text">
        <details>
            <summary role="button">Help with this section</summary>
            <p class="panel-indent">
                Think carefully about how you answer these questions. Where possible,
                keep the vacancy that you're applying for in mind, and tailor your
                answers to match the role.
            </p>
        </details>
    </div>

    @Html.FormTextAreaFor(m => m.WhatAreYourStrengths, hintText: "For example, team working, organising")
    @Html.FormTextAreaFor(m => m.WhatDoYouFeelYouCouldImprove, hintText: "For example, time managing, confidence")
    @Html.FormTextAreaFor(m => m.WhatAreYourHobbiesInterests, hintText: "These can include any personal achievements")
    @Html.FormTextAreaFor(m => m.AnythingWeCanDoToSupportYourInterview, hintText: "For example, do you need a signer, information in braille")

</fieldset>
