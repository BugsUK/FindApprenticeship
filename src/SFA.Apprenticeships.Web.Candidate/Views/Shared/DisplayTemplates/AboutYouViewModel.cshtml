@model AboutYouViewModel

<fieldset class="fieldset-with-border">
    <legend class="heading-large">
        About you
        @if (ViewBag.VacancyId != null)
        {
            <a class="icon-with-text" href='@Url.Action("Apply", "Application", new {id = ViewBag.VacancyId})#applyAboutYou'>
                <i class="the-icon fa fa-pencil"></i><span class="the-text">Amend details</span>
            </a>

        }       
    </legend>

    <div class="form-group">
        @Html.LabelFor(m => m.WhatAreYourStrengths, new { @class = "form-label text" })
        <span id="@Html.IdFor(m => m.WhatAreYourStrengths)" class="form-prepopped">@Html.DisplayFor(m => m.WhatAreYourStrengths)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.WhatDoYouFeelYouCouldImprove, new { @class = "form-label text" })
        <span id="@Html.IdFor(m => m.WhatDoYouFeelYouCouldImprove)" class="form-prepopped">@Html.DisplayFor(m => m.WhatDoYouFeelYouCouldImprove)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.WhatAreYourHobbiesInterests, new { @class = "form-label text" })
        <span id="@Html.IdFor(m => m.WhatAreYourHobbiesInterests)" class="form-prepopped">@Html.DisplayFor(m => m.WhatAreYourHobbiesInterests)</span>
    </div>
    @if (Model.RequiresSupportForInterview)
    {
        <div class="form-group">
            <p class="form-label">Is there anything we can do to support your interview?</p>
            <span id="@Html.IdFor(m => m.AnythingWeCanDoToSupportYourInterview)" class="form-prepopped">@Html.DisplayFor(m => m.AnythingWeCanDoToSupportYourInterview)</span>
        </div>
    }   
</fieldset>
