@model EducationViewModel

<fieldset id="applyEducation" class="fieldset-with-border">
    <legend class="heading-large">
        Education
        @if (ViewBag.VacancyId != null)
        {
            <a class="icon-with-text" href='@Url.Action("Apply", "Application", new {id = ViewBag.VacancyId})#applyEducation'>
                <i class="the-icon fa fa-pencil"></i>
                <span class="the-text">Amend details</span>
            </a>

        }              
    </legend>
    <div class="form-group">
        <label for="school-name" class="form-label">Name of most recent school/college</label>
        <span class="form-prepopped">@Html.DisplayTextFor(m => m.NameOfMostRecentSchoolCollege)</span>
    </div>
    <div class="inline-fixed">
        <p class="form-label">Years attended</p>
        <div class="form-group">
            <label for="school-from" class="form-label form-hint">From</label>
            <span class="form-prepopped">@Html.DisplayTextFor(m => m.FromYear)</span>
        </div>
        <div class="form-group">
            <label for="school-to" class="form-label form-hint">To</label>
            <span class="form-prepopped">@Html.DisplayTextFor(m => m.ToYear)</span>
        </div>
    </div>
</fieldset>