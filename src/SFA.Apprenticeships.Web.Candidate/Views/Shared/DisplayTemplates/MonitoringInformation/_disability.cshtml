@model MonitoringInformationViewModel

@if (!string.IsNullOrWhiteSpace(Model.DisabilityStatusDescription))
{
    <div class="form-group">
        <p class="form-label-bold" id="disability-label">Do you have a learning difficulty, disability or health problem?</p>
        <span id="@Html.IdFor(m => m.DisabilityStatusDescription)" class="form-prepopped">@Html.DisplayFor(m => m.DisabilityStatusDescription)</span>
    </div>
}

<div class="form-group">
    <p class="form-label-bold">Is there anything we can do to support your interview?</p>
    @if (Model.RequiresSupportForInterview)
    {
        <span id="@Html.IdFor(m => m.AnythingWeCanDoToSupportYourInterview)" class="form-prepopped prewrap">@Html.DisplayFor(m => m.AnythingWeCanDoToSupportYourInterview)</span>
    }
    else
    {
        <span id="@Html.IdFor(m => m.AnythingWeCanDoToSupportYourInterview)" class="form-prepopped prewrap">I don't have any interview support requirements</span>
    }
</div>