@if (Request.IsAuthenticated)
{
    //TODO Mark to refactor with User Context - Ideally have a ViewModel for this
    var fullName = string.Empty;
    var cookie = Request.Cookies["User.Context"];
    if (cookie != null)
    {
        fullName = cookie["FullName"];
    }
    <div class="account-info" id="bannerSignedIn">
        <span class="your-name" id="bannerUserName">@fullName</span>
        <div>
            <a href='@Url.RouteUrl("MyApplications")'>My applications</a>
            <a href='#'>Settings</a>
            <a href='@Url.Action("SignOut", "Login")' id="btnSignOut"><i class="fa fa-sign-out"></i>Sign out</a>
        </div>
    </div>
}
else
{
    <div class="account-info" id="bannerSignedOut">
        <a href="@Url.Action("Index", "Login")" id="loginLink" title="Sign in"><i class="fa fa-sign-in"></i>Sign in</a>
    </div>
}