    <p id="InfoMessageText">To use this service you must accept our updated terms and conditions</p>
</div>

<div class="hgroup">
    <div class="text">
        <h1 class="heading-xlarge">Terms and conditions
            <span class="heading-secondary ">Please read and accept our updated terms and conditions​</span>
        </h1>
    </div>
</div>
@Html.Partial("_TermsAndConditions")
