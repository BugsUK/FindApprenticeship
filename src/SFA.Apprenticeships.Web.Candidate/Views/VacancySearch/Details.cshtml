@model SFA.Apprenticeships.Domain.Entities.Vacancy.VacancyDetail
@{
    ViewBag.Title = "SFA Apprenticeships - " + Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .blocked-backgroud {
        background-color: red;
    }
</style>

<div class="hgroup text">
    <h1 class="heading-xlarge" id="vacancy-title">@Model.Title</h1>
    <h2 class="subtitle" id="vacancy-subtitle-employer-name">@Model.EmployerName</h2>
</div>
<section class="grid-wrapper">
    <div class="grid grid-2-3">
        <div class="inner-block-padr">
            <div class="text">
                <p id="vacancy-description">@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="grid grid-1-3">
        <a href="#" class="button button-with-hint">Apply for vacancy</a>
        <p class="copy-16">Closing date: <span id="vacancy-closing-date">@Model.ClosingDate.ToUniversalTime().ToString("dd MMM yy")</span></p>
    </div>
</section>
<section class="section-border">
    <ul class="list-flowing-3cols">
        <li class="inner-block-padr">
            <h2 class="heading-small">
                <a href="#vacancy-info">1. Vacancy summary</a>
            </h2>
            <p>
                Information about responsibilities, working hours and wage
            </p>
        </li>
        <li class="inner-block-padr">
            <h2 class="heading-small">
                <a href="#course-info">2. Information for candidate</a>
            </h2>
            <p>
                Includes qualifications, skills and personal qualities required for role
            </p>
        </li>
        <li class="inner-block-padr">
            <h2 class="heading-small">
                <a href="#employer-info">3. About the employer</a>
            </h2>
            <p>
                Includes company profile, address and contact details
            </p>
        </li>
        <li class="inner-block-padr">
            <h2 class="heading-small">
                <a href="#provider-info">4. Learning provider</a>
            </h2>
            <p>
                Details of training plans and role of learning provider
            </p>
        </li>
        <li class="inner-block-padr">
            <h2 class="heading-small">
                <a href="#before-apply">5. Before you apply</a>
            </h2>
            <p>
                What you must do before you apply for the vacancy
            </p>
        </li>
    </ul>
</section>
<section class="section-border grid-wrapper" id="vacancy-info">
    <h2 class="heading-large">1. Vacancy summary</h2>
    <div class="grid grid-2-3">
        <div class="inner-block-padr">
            <div class="text">
                <p id="vacancy-full-descrpition">@Html.Raw(Model.FullDescription)</p>
            </div>
        </div>
    </div>
    <div class="grid grid-1-3">
        <ul class="list-text">
            <li class="bold-medium">Weekly wage</li>
            <li id="vacancy-wage">&pound;@string.Format("{0:N2}", @Model.Wage)</li>
            <li id="vacancy-wage-description">@Model.WageDescription</li>
        </ul>
        <ul class="list-text">
            <li>
                <h3 class="bold-medium">Working week</h3>
            </li>
            <li id="vacancy-working-week">@Model.WorkingWeek</li>
        </ul>
        <ul class="list-text">
            <li>
                <h3 class="bold-medium">Expected duration</h3>
            </li>
            <li id="vacancy-expected-duration">@Model.ExpectedDuration</li>
        </ul>
        <ul class="list-text">
            <li class="bold-medium">Distance</li>
            <li id="vacancy-distance">TO BE CALCULATED</li>
        </ul>
        <ul class="list-text">
            <li>
                <h3 class="bold-medium">Vacancy type</h3>
            </li>
            <li id="vacancy-type">@Model.VacancyType (will need formatted)</li>
        </ul>
        <ul class="list-text">
            <li class="bold-medium">Reference number</li>
            <li id="vacancy-reference-id">@Html.Raw("VAC" + Model.Id.ToString("D9"))</li>
        </ul>
    </div>
    <p class="subtext blocked-backgroud">Content provided by R G Engineering - 01 May 14</p>
</section>
<section class="section-border grid-wrapper" id="course-info">
    <h2 class="heading-large">2. Information for candidate</h2>
    <div class="grid grid-1-2">
        <div class="inner-block-padr">
            <div class="text">
                <h3 class="heading-medium">Desired skills</h3>
                <p id="vacancy-skills-required">@Html.Raw(Model.SkillsRequired)</p>
                <h3 class="heading-medium">Qualifications required</h3>
                <p id="vacancy-qualifications-required">@Model.QualificationRequired</p>
            </div>
        </div>
    </div>
    <div class="grid grid-1-2">
        <div class="text">
            <h3 class="heading-medium">Future prospects</h3>
            <p id="vacancy-future-prospects">@Model.FutureProspects</p>
            <h3 class="heading-medium">Reality check</h3>
            <p class="blocked-backgroud">What field is this from?</p>
        </div>
    </div>
    <p class="subtext blocked-backgroud">Content provided by Valkyrie Support Services - 01 May 14</p>
</section>
<section class="section-border grid-wrapper" id="employer-info">
    <h2 class="heading-large">3. About the employer</h2>
    <div class="grid grid-2-3">
        <div class="inner-block-padr">
            <div class="text">
                <p id="vacancy-emnployer-description">@Html.Raw(Model.EmployerDescription)</p>
            </div>
        </div>
    </div>
    <div class="grid grid-1-3">
        <ul class="list-text">
            <li class="bold-medium">Contact</li>
            <li>@Model.EmployerName</li>
            <li><a href="@Model.EmployerWebsite" target="_blank" title="@Model.EmployerName Web Site">@Model.EmployerWebsite</a></li>
        </ul>
        <ul class="list-text">
            <li>@Model.AddressLine1</li>
            <li>@Model.AddressLine2</li>
            <li>@Model.AddressLine3</li>
            <li>@Model.AddressLine4</li>
            <li>@Model.AddressLine5</li>
            <li>@Model.Town</li>
            <li>@Model.County</li>
            <li>@Model.PostCode</li>
        </ul>
        <div class="ad-details__map">
            <iframe width="700" height="250" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=@Html.Raw(Model.PostCode),+United+Kingdom&key=AIzaSyCusA_0x4bJEjU-_gLOFiXMSBXKZYtvHz8"></iframe>
            <p class="nojs-notice">You must have JavaScript enabled to view a map of the location</p>
        </div>
    </div>
    <p class="subtext blocked-backgroud">Content provided by R G Engineering - 01 May 14</p>
</section>
<section class="section-border grid-wrapper" id="provider-info">
    <h2 class="heading-large">4. Learning provider</h2>
    <div class="grid grid-2-3">
        <div class="inner-block-padr">
            <div class="text">
                <p>@Html.Raw(Model.ProviderDescription)</p>
                <h3 class="heading-medium">Apprenticeship framework</h3>
                <p>@Html.Raw(Model.Framework)</p>
            </div>
        </div>
    </div>
    <div class="grid grid-1-3">
        <ul class="list-text">
            <li>
                <h3 class="bold-medium">Learning provider</h3>
            </li>
            <li>@Model.ProviderName</li>
        </ul>
        <ul class="list-text">
            <li>
                <h3 class="bold-medium">Contact</h3>
            </li>
            <li class="blocked-backgroud">Hannah Durber</li>
            <li class="blocked-backgroud">01889 566263</li>
            <li class="blocked-backgroud">School House Farm</li>
            <li class="blocked-backgroud">Beamhurst</li>
            <li class="blocked-backgroud">Uttoxeter</li>
            <li class="blocked-backgroud">ST14 5EA</li>
            <li>
                <a href="mailto:hannahdurber@vsslearning.co.uk" class="blocked-backgroud">hannahdurber@vsslearning.co.uk</a>
            </li>
        </ul>
        <div class="ad-details__map">
            <p class="blocked-backgroud">Where do we get the address for this map?</p>
            <iframe width="700" height="250" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=ST14+5EA,+United+Kingdom&key=AIzaSyCusA_0x4bJEjU-_gLOFiXMSBXKZYtvHz8"></iframe>
            <p class="nojs-notice">You must have JavaScript enabled to view a map of the location</p>
        </div>
    </div>
    <p class="subtext blocked-backgroud">Content provided by Valkyrie Support Services - 01 May 14</p>
</section>
<section id="before-apply">
    <h2 class="heading-large">5. Before you apply</h2>
    <div class="text">
        <p>You will need to:</p>
        <ul>
            <li>complete an application form</li>
            <li>write a personal statement</li>
            <li>provide details of your qualifications</li>
        </ul>
    </div>
    <div class="form-group">
        <a class="button button-with-hint" href="#">Apply for vacancy</a>
        <p class="copy-16">Closing date: @Model.ClosingDate.ToUniversalTime().ToString("dd MMM yy")</p>
        <a class="button-link" href="javascript:history.back()" title="Back to search results">Back</a>
    </div>
</section>

