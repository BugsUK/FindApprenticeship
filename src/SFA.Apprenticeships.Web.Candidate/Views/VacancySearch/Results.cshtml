@model SFA.Apprenticeships.Web.Candidate.ViewModels.VacancySearch.VacancySearchResponseViewModel

@{
    ViewBag.Title = "SFA Apprenticeships";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="search-results-wrapper grid-wrapper">
    <div class="hgroup">
        <h1 class="heading-xlarge">Search results</h1>
        <p>There are <b class="bold-medium">@Model.Total</b> Apprenticeships that closely match your search.</p>
    </div>
    <section class="grid grid-1-3">
        <fieldset class="search-filter">
            <legend class="heading-medium mob-collpanel-trigger">Filter results</legend>
            <div class="mob-collpanel toggle-content--mob">
                @using (Html.BeginForm("results", "vacancysearch", FormMethod.Get))
                {
                    <div class="form-group">
                        <label for="job-title" class="form-label">Job title (optional)</label>
                        <input id="job-title" name="jobTitle" type="text" class="form-control" value="@Model.VacancySearch.JobTitle">
                    </div>
                    <div class="form-group">
                        <label for="keywords" class="form-label">Keyword (optional)</label>
                        <input id="keywords" name="keywords" type="text" class="form-control" value="@Model.VacancySearch.Keywords">
                    </div>
                    <div class="form-group">
                        <label for="location" class="form-label">Apprenticeship location</label>
                        <input id="location" name="location" type="text" class="form-control" value="@Model.VacancySearch.Location">
                    </div>
                    <div class="form-group">
                        <label for="loc-within" class="form-label">Within</label>
                        @Html.DropDownList("withindistance", (SelectList) ViewBag.Distances, new {id = "loc-within"})
                    </div>
                    <div class="form-group">
                        <button class="button">Update results</button>
                    </div>
                }
            </div>
        </fieldset>
    </section>
    <section class="grid grid-2-3">
        <fieldset>
            <legend class="visuallyhidden">Search items</legend>
            <div class="float-right-wrap">
                <div class="form-group form-group-compound">
                    <label for="sort-results" class="heading-medium inline">Sort results</label>
                    <select name="" id="sort-results">
                        <option value="sort-distance">Distance</option>
                        <option value="sort-closing">Closing date</option>
                    </select>
                </div>
            </div>
        </fieldset>
        <ul class="search-results">
            @foreach (var vacancy in Model.Vacancies)
            {
                <li class="search-results__item section-border">
                    <div class="hgroup-medium">
                        <h3 class="heading-medium"><a href="#">@vacancy.Title</a></h3>
                        <h4 class="subtitle">@vacancy.EmployerName</h4>
                    </div>
                    <p class="search-shortdesc">
                        @vacancy.Description
                    </p>
                    <p>
                        <a href="#">Read more</a>
                    </p>
                    <div class="inl-block-wrapper">
                        <ul class="list-text btm-align width-all-2-3">
                            <li><b>Distance:</b> @vacancy.DistanceAsString miles</li>
                            <li><b>Closing date:</b> @vacancy.ClosingDate</li>
                        </ul>
                        <div class="btm-align width-all-1-3">
                            <div class="search-save">
                                <input type="checkbox" class="save-trigger" id="save-trigger1">
                                <label for="save-trigger1">Save</label>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
        <div class="page-navigation">
            <a href="#" class="page-navigation__btn previous">
                <i class="arrow-button"></i>
                <span class="description">Previous <span class="hide-mob">page</span></span>
                <span class="counter">1 of 6</span>
            </a>
            <a href="#" class="page-navigation__btn next">
                <i class="arrow-button"></i>
                <span class="description">Next <span class="hide-mob">page</span></span>
                <span class="counter">3 of 6</span>
            </a>
        </div>
    </section>
</div>

@section scripts
{
    <!-- Needs sorting with Henry -->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

    <script src="~/Content/_assets/js/locationAutocomplete.js"></script>
    <script>
        $("#location").locationMatch({ url: '@Url.Action("location", "vacancysearch")' });
    </script>
}
