@model VacancySearchResponseViewModel

@{
    var pages = Model.Pages;
    var prevLink = Model.VacancySearch.PageNumber > 1 ? Url.Action("results", new VacancySearchViewModel(Model.VacancySearch) {PageNumber = Model.PrevPage, LocationType = Model.VacancySearch.LocationType, SearchAction = SearchAction.Sort}) : "#";
    var nextLink = Model.VacancySearch.PageNumber < pages ? Url.Action("results", new VacancySearchViewModel(Model.VacancySearch) {PageNumber = Model.NextPage, LocationType = Model.VacancySearch.LocationType, SearchAction = SearchAction.Sort}) : "#";
}

@if (Model.TotalLocalHits > 0 || Model.TotalNationalHits > 0 )
{
    <div class="page-navigation">
        <a href="@prevLink"
           style="visibility: @(Model.VacancySearch.PageNumber == 1 ? "hidden" : "visible")"
           class="page-navigation__btn previous">
            <i class="arrow-button fa fa-angle-left"></i>
            <span class="description">Previous <span class="hide-mob">page</span></span>
            <span class="counter">@Model.PrevPage of @pages</span>
        </a>
        <a href="@nextLink"
           style="visibility: @(Model.VacancySearch.PageNumber == pages ? "hidden" : "visible")"
           class="page-navigation__btn next">
            <i class="arrow-button fa fa-angle-right"></i>
            <span class="description">Next <span class="hide-mob">page</span></span>
            <span class="counter">@Model.NextPage of @pages</span>
        </a>
    </div>
}