@model EducationViewModel

<section id="applyEducation" class="sfa-section-bordered nobreak-print">
    <h2 class="heading-large">
        Education
        @if (ViewBag.VacancyId != null)
        {
            <a class="icon-with-text" href='@Url.RouteUrl(CandidateRouteNames.ApprenticeshipApply, new {id = ViewBag.VacancyId})#applyEducation'>
                <i class="the-icon fa fa-pencil"></i><span class="the-text">Edit section</span>
            </a>

        }
    </h2>
    <div class="form-group">
        <p class="form-label-bold">Name of most recent school/college</p>
        <span id="@Html.IdFor(m => m.NameOfMostRecentSchoolCollege)" class="form-prepopped">@Html.DisplayTextFor(m => m.NameOfMostRecentSchoolCollege)</span>
    </div>
    <div class="inline-fixed">
        <p class="form-label-bold">Years attended</p>
        <div class="form-group">
            <span class="form-hint">Started</span>
            <span id="@Html.IdFor(m => m.FromYear)" class="form-prepopped">@Html.DisplayTextFor(m => m.FromYear)</span>
        </div>
        <div class="form-group">
            <span class="form-hint">Finished</span>
            <span id="@Html.IdFor(m => m.ToYear)" class="form-prepopped">@Html.DisplayTextFor(m => m.ToYear)</span>
        </div>
    </div>
</section>