@model SFA.Apprenticeships.Web.Candidate.ViewModels.Applications.WhatHappensNextViewModel
@{
    ViewBag.Title = "Apprenticeship application submitted - Find an apprenticeship";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="progress-indicator progress-indicator-horizontal">
    <ul>
        <li><span class="hide-tablet">Step </span>1<span class="hide-tablet"> of 3</span>. Application form</li>
        <li><span class="hide-tablet">Step </span>2<span class="hide-tablet"> of 3</span>. Check your application</li>
        <li class="active"><span class="hide-tablet">Step </span>3<span class="hide-tablet"> of 3</span>. Submitted</li>
    </ul>
</div>
<div class="success-banner" role="alert" aria-live="assertive">
    <h1 class="heading-large"><i class="fa fa-check"></i>Apprenticeship application submitted</h1>
    <div>
        You've applied for:
        <h2 class="heading-medium">@Html.DisplayFor(m => m.VacancyTitle) - @Html.DisplayFor(m => m.VacancyReference)</h2>
    </div>
</div>
@if (Model.SentEmail)
{
    <section class="section-border">
        <p>
            <i class="fa fa-envelope-o"></i>We've sent you an email confirming your application
        </p>
    </section>
}
else
{
    <section class="section-border">
        <p class="text">
            <i class="fa fa-envelope-o"></i>If you'd like to receive email confirmation of applications, you can turn notifications on in the <a href="@Url.RouteUrl(CandidateRouteNames.Settings)">settings</a> section in your account.
        </p>
    </section>
}

<h2 class="heading-medium">What happens next</h2>
<div class="text form-group">
    <p>
        You’ll be contacted if you’ve been shortlisted for an interview. If you
        haven’t been successful the training provider will let you know and
        give you feedback.
    </p>
    <p>
        You can also <a href="@Url.RouteUrl(CandidateRouteNames.MyApplications)">track the progress of your application</a> at any time.</p>
    <p>
        If you need to contact us about your application, don’t forget to quote
        the reference number.
    </p>
    <p>
        <a href="@ViewBag.FeedbackUrl" rel="external" target="_blank">What did you think of the service?</a>
    </p>
    <p>
        <a href="@Url.RouteUrl(RouteNames.SignOut, new { returnUrl = ViewBag.FeedbackUrl })">Finished with this service. Sign out and give feedback</a>
    </p>
</div>
<div class="form-group form-group-compound get-started">
    <a role="button" class="button" href='@Url.RouteUrl(CandidateRouteNames.ApprenticeshipSearch)'>Find an apprenticeship</a>
</div>
<div class="form-group">
    @if (ViewBag.SearchReturnUrl != null)
    {
        <p class="text">
            <a href="@ViewBag.SearchReturnUrl" title="Return to search results" id="lnk-return-search-results">Return to search results</a>
        </p>
    }
</div>