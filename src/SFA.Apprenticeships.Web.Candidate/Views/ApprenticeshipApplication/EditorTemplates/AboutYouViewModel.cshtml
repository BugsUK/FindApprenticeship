@model AboutYouViewModel

<fieldset id="applyAboutYou" class="sfa-xlarge-bottom-margin sfa-section-bordered">
    <legend class="heading-large">About you</legend>
    <div class="form-group text">
        <details id="appTourAbout">
            <summary aria-controls="helpText" role="button" aria-expanded="false">Help with this section</summary>
            <p class="panel panel-border-narrow" id="helpText" role="region" aria-hidden="true">
                Think carefully about how you answer these questions. Where possible,
                keep the apprenticeship that you're applying for in mind, and tailor your
                answers to match the role.
            </p>
        </details>
    </div>

    @Html.FormTextAreaFor(m => m.WhatAreYourStrengths, controlHtmlAttributes: new { @data_val_length_max = "4000", rows = "4", role = "textbox", aria_multiline = "true", @class = "appTourStrengths" }, hintHtmlAttributes: new { @class = "text" })
    @Html.FormTextAreaFor(m => m.WhatDoYouFeelYouCouldImprove, controlHtmlAttributes: new { @data_val_length_max = "4000", rows = "4", role = "textbox", aria_multiline = "true", @class = "appTourSkills" }, hintHtmlAttributes: new { @class = "text" })
    @Html.FormTextAreaFor(m => m.WhatAreYourHobbiesInterests, controlHtmlAttributes: new { @data_val_length_max = "4000", rows = "4", role = "textbox", aria_multiline = "true", @class = "appTourHobbies" }, hintHtmlAttributes: new { @class = "text" })

</fieldset>
