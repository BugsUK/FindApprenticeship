        $(function () {
            $('#submit-application').on('click', function () {

                if ($('#submit-application').attr('data-disabled') != undefined) {
                    if (event.preventDefault) {
                        event.preventDefault();
                    }

                    $('#submit-application').attr("disabled", "disabled");
