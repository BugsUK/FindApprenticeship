@model RegisterViewModel

@{
    ViewBag.Title = "Create an account - Find an apprenticeship";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="heading-xlarge">Create an account</h1>

@using (Html.BeginRouteForm(RouteNames.Register, FormMethod.Post, new { id = "register-form" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("ValidationSummary", ViewData.ModelState)
    
    //Hidden password input to disable autocomplete
    <input title="Hidden password field" type="password" class="sfa-hide" />

    <fieldset class="sfa-xlarge-bottom-margin sfa-section-bordered">
        <legend class="heading-large">Your details</legend>
        @Html.FormTextFor(m => m.Firstname, containerHtmlAttributes: new { @class = "form-group-compound" }, controlHtmlAttributes: new { type = "text", autocorrect = "off" })
        @Html.FormTextFor(m => m.Lastname, controlHtmlAttributes: new { type = "text", autocorrect = "off" })
        @Html.EditorFor(r => r.DateOfBirth)
    </fieldset>

    <fieldset class="sfa-xlarge-bottom-margin sfa-section-bordered">
        <legend class="heading-large">Contact details</legend>
        <div class="form-group">

            @Html.EditorFor(a => a.Address, new { AnalyticsDSCUri = "/register/findaddress" })
            @Html.FormTextFor(m => m.EmailAddress, controlHtmlAttributes: new { @class = "linked-input-master", type = "email", spellcheck = "false" }, hintHtmlAttributes: new { @class = "text" })
            <span aria-live="polite" id="email-available-message" class="validation-message"></span>

            @Html.FormTextFor(m => m.PhoneNumber, controlHtmlAttributes: new { @class = "form-control-1-3", type = "tel" }, hintHtmlAttributes: new { @class = "text" })

        </div>
    </fieldset>

    <fieldset class="sfa-xlarge-bottom-margin sfa-section-bordered">
        <legend class="heading-large">Sign in details</legend>
        <div class="form-group">
            <p class="form-label-bold">Email address</p>
            <span class="form-prepopped hidden linked-input-slave"></span>
            <label class="sfa-hide" for="hiddenUsername"></label>
            <input type="text" class="form-prepopped sfa-hide linked-input-slave" name="username" id="hiddenUsername">
            <a class="inl-block inpage-focus" href="#@Html.IdFor(m => m.EmailAddress)">Edit your email</a>
        </div>
        
        @using (Html.FormPasswordWithContentFor(m => m.Password, hintHtmlAttributes: new { id = "passwordHint" }, controlHtmlAttributes: new { aria_describedby = "passwordHint", autocomplete = "off" }))
        {
            <span class="sfa-form-control-after strength-indicator hide-nojs">Password strength: <span id="pass_meter"></span></span>
        }
        
        @Html.FormPasswordFor(m => m.ConfirmPassword, controlHtmlAttributes: new { autocomplete = "off" })
    </fieldset>
    
    <div class="form-group">
        @Html.FormUnvalidatedCheckBoxFor(m => m.AcceptUpdates, labelHtmlAttributes: new { @class = "block-label selection-button-checkbox" })
    </div>

    @Html.FormCheckBoxFor(m => m.HasAcceptedTermsAndConditions, labelHtmlAttributes: new { @class = "block-label selection-button-checkbox" })

    <div class="form-group">
        <button id="create-account-btn" class="button">Create account</button>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/nas/account")
    @Scripts.Render("~/bundles/nas/passwordstrength")

    <script>
        $(function () {
            $('#address-details').addClass('sfa-disabled');
            $('input[id=EmailAddress]').usernameLookup('@Url.RouteUrl(RouteNames.CheckUsername)');
        });

    </script>
}
