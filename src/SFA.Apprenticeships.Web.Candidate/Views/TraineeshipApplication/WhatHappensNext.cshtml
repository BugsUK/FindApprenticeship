@model SFA.Apprenticeships.Web.Candidate.ViewModels.Applications.WhatHappensNextTraineeshipViewModel
@{
    ViewBag.Title = "Traineeship application submitted - Find a traineeship";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="success-banner" role="alert" aria-live="assertive">
    <h1 class="heading-large"><i class="fa fa-check"></i>Traineeship application submitted</h1>
    <div>
        You've applied for:
        <h2 class="heading-medium">@Html.DisplayFor(m => m.VacancyTitle) - @Html.DisplayFor(m => m.VacancyReference)</h2>
    </div>
</div>
@if (Model.SentEmail)
{
    <section class="section-border">
        <p>
            <i class="fa fa-envelope-o"></i>We've sent you an email confirming your application
        </p>
    </section>
}
else
{
    <section class="section-border">
        <p class="text">
            <i class="fa fa-envelope-o"></i>You've requested not to receive email confirmation of your applications. You can change this in your settings at any time.
        </p>

        <p class="text">
            <a href="@Url.RouteUrl(CandidateRouteNames.Settings)">Receive confirmation emails?</a>
        </p>
    </section>
}

<h2 class="heading-medium">What happens next</h2>
<div class="text form-group">
    <p>
        You’ll be contacted if you’re eligible for a traineeship. You can see the applications you've made by visiting <a href="@Url.RouteUrl(CandidateRouteNames.MyApplications)">my applications</a>.
    </p>
    <h3 class="heading-small">Training provider</h3>
    <p>@Model.ProviderContactInfo</p>
    <p>
        <a href="@ViewBag.FeedbackUrl" rel="external" target="_blank">What did you think of the service?</a>
    </p>
    <p>
        <a href="@Url.RouteUrl(RouteNames.SignOut, new { returnUrl = ViewBag.FeedbackUrl })">Finished with this service. Sign out and give feedback</a>
    </p>
</div>
<div class="form-group form-group-compound get-started">
    <a role="button" class="button" href='@Url.RouteUrl(CandidateRouteNames.TraineeshipSearch)'>Find a traineeship</a>
</div>
<div class="form-group">
    @if (ViewBag.SearchReturnUrl != null)
    {
        <p class="text">
            <a href="@ViewBag.SearchReturnUrl" title="Return to search results" id="lnk-return-search-results">Return to search results</a>
        </p>
    }
</div>
