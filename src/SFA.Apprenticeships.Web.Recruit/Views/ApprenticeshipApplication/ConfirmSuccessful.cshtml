@using SFA.Apprenticeships.Web.Recruit.Constants

@model SFA.Apprenticeships.Web.Recruit.ViewModels.Application.Apprenticeship.ApprenticeshipApplicationViewModel

@{
    ViewBag.Title = "Recruit an Apprentice - Send outcome";
}

@using (Html.BeginRouteForm(RecruitmentRouteNames.ConfirmSuccessfulApprenticeshipApplication, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.ApplicationSelection.ApplicationId)

    <div>
        <section>
            <div class="form-group">
                <button type="submit" class="button" name="Review" value="AppointCandidate">Appoint candidate</button>
                <p class="med-btm-margin">
                    <button type="submit" class="button-link" name="Review" value="CancelAppointCandidate">Cancel</button>
                </p>
            </div>
        </section>
    </div>
}
