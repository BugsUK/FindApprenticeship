@using SFA.Apprenticeships.Web.Recruit.Constants
@{
    ViewBag.Title = "Recruit an Apprentice - Contact Details";
}
<div class="panel-success toggle-content" id="nextProviderBanner">
    <div class="text">
        <div class="copy-16">
            <p>Please take a moment to fill in your contact details.</p>
        </div>
    </div>
</div>
<div class="panel-success toggle-content" id="userInfoSaved">
    <div class="text">
        <div class="copy-16">
            <p><i class="fa fa-check"></i>Your contact details have been saved</p>
        </div>
    </div>
</div>
<div class="grid-wrapper" id="userInfoPage">
    <div class="hgroup">
        <h1 class="heading-xlarge">
            Your contact details
        </h1>
    </div>
    <div class="text">
        <p>
            This information will not appear on the vacancy advert and will only
            be used by us if we need to contact you.
        </p>
    </div>
    <div class="form-group">
        <label for="yourName" class="form-label">Full name</label>
        <input id="yourName" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label for="yourEmail" class="form-label">Work email address</label>
        <input id="yourEmail" type="email" class="form-control">
    </div>
    <div class="form-group">
        <label for="yourPhone" class="form-label">Work phone number</label>
        <input id="yourPhone" type="tel" class="form-control form-control-1-3">
    </div>
    <div class="form-group">
        <p class="form-label">Your default training site</p>
        <select name="" id="" class="chosen-select">
            <option value="" selected>Basing View, Basingstoke</option>
            <option value="">Great Charles Street Queensway, Birmingham</option>
            <option value="">St. Helens Street, Ipswich</option>
            <option value="">South Parade, Leeds</option>
            <option value="">24-26 Baltic Street West, London</option>
            <option value="">Dean Street, Newcastle upon Tyne</option>
            <option value="">Judson Road, Peterlee</option>
            <option value="">David Murray John Tower, Swindon</option>
            <option value="">6-10 Gills Yard, Wakefield</option>
            <option value="">Sheep Street, Wellingborough</option>
            <option value="">Sheet Street, Windsor</option>
        </select>
    </div>
    <div class="toggle-content" id="newProviderTerms">
        <p>
            By continuing you accept the <a href="terms-and-conditions.html" target="_blank">terms and conditions</a> of
            this site.
        </p>
        <a id="providerCreateBtn" href="@Url.RouteUrl(RecruitmentRouteNames.VertifyEmail)" class="button">Accept and continue</a>
    </div>
    <div class="" id="userInfoSaveBtn">
        <a href="" class="button" id="userInfoSaveBtnClick">Save details</a>
    </div>
</div>
