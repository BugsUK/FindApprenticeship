@model SFA.Apprenticeships.Web.Raa.Common.ViewModels.ProviderUser.VerifyEmailViewModel

@using SFA.Apprenticeships.Web.Recruit.Constants
@{
    ViewBag.Title = "Recruit an Apprentice - Vertify Email";
}

<h1 id="accountCreated" class="heading-xlarge">Verify email</h1>

<p class="text">
    An email has been sent to <b class="">@Model.EmailAddress</b>.
    It’ll contain a 6-character code that you’ll need to verify your email
    address.
</p>

@using (Html.BeginRouteForm(RecruitmentRouteNames.VerifyEmail, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Partial("ValidationSummary", ViewData.ModelState)

    @Html.FormTextFor(
            m => m.VerificationCode,
            controlHtmlAttributes: new { type = "text", autofocus = "autofocus", spellcheck = "false", @class = "form-control-1-3" })
    
    <p><a href="@Url.RouteUrl(RecruitmentRouteNames.ResendVerificationCode)">Resend code</a></p>
    
    <p><a href="@Url.RouteUrl(RecruitmentRouteNames.Settings)">Change email</a></p>

    <div class="form-group">
        <button class="button activate-page-btn" id="btnSignIn">Verify email</button>
    </div>

}