@model SFA.Apprenticeships.Web.Recruit.ViewModels.ProviderUser.HomeViewModel
@using SFA.Apprenticeships.Web.Recruit.Constants
@{
    ViewBag.Title = "Recruit an Apprentice";
}

<div class="grid-wrapper para-btm-margin">
    <div class="grid-1-2 grid">
        <h1 class="heading-xlarge">
            Recruitment home
        </h1>
    </div>
    <div class="grid grid-1-2">
        <div class="">
            <p class="form-label">Change training site</p>
            @Html.DropDownListFor(m => m.ProviderUserViewModel.DefaultTrainingSiteErn, Model.ProviderSites)
        </div>
    </div>
</div>
<div class="grid-wrapper">
    <div class="grid grid-1-2">
        <div class="inner-block-padr">
            <section>
                <h2 class="heading-medium">New vacancy</h2>
                <p class="font-xsmall">Create a new vacancy, clone or continue with a draft</p>
                <div class="font-xsmall">
                    <a href="@Url.RouteUrl(RecruitmentRouteNames.SelectExistingEmployer)" class="button">New vacancy</a>
                </div>
            </section>
            <section>
                <h2 class="heading-medium">Your vacancies</h2>
                <div class="grid-wrapper font-xsmall med-btm-margin">
                    <div class="grid grid-2-3">
                        <div class="inner-block-padr">
                            <select name="" id="" class="form-label">
                                <option value="" hidden>-- Filter vacancies --</option>
                                <option value="">Employer</option>
                                <option value="">Title</option>
                                <option value="">Framework</option>
                            </select>
                            <input type="text" class="form-control width-all-1-1" id="filter-employers">
                        </div>
                    </div>
                    <div class="grid grid-1-3 ta-right">
                        <input type="text" class="form-control invisible med-btm-margin">
                        <select name="" id="" class="small-right-margin">
                            <option value="" hidden>-- Filter status --</option>
                            <option value="">All</option>
                            <option value="">Live</option>
                            <option value="">For review</option>
                            <option value="">Submitted</option>
                            <option value="">Drafts</option>
                            <option value="">Closed</option>
                        </select>
                    </div>
                </div>
                <div class="tabbed-element tab1 active width-all-1-1">
                    <table class="no-btm-margin">
                        <colgroup>
                            <col class="t70">
                            <col class="t30">
                        </colgroup>
                        <tbody>
                            <tr class="va-middle">
                                <td>
                                    <div class="vac-title">
                                        <a href="live-apprenticeship-summary.html" class="disp-block link-unimp">Mechanical Engineer – Precision Toolmaker <span class="inl-block">(12 applications)</span></a>
                                    </div>
                                    <span>RG Engineering</span>
                                </td>
                                <td class="ta-center">
                                    <span class="tag-live">Live</span>
                                    Closing in 1 day
                                </td>
                            </tr>
                            <tr class="va-middle">
                                <td>
                                    <div class="vac-title">
                                        <a title="This vacancy is closing soon with no applications" href="live-apprenticeship.html"
                                           class="disp-block link-unimp">Apprentice precision toolmaker<span class="inl-block">(0 applications) <i class="fa fa-exclamation-circle"></i></span></a>
                                    </div>
                                    <span>Regent Engineers Ltd </span>
                                </td>
                                <td class="ta-center">
                                    <span class="tag-live">Live</span>
                                    Closing in 3 days
                                </td>
                            </tr>
                            <tr class="va-middle">
                                <td>
                                    <div class="vac-title">
                                        <a href="review-apprenticeship.html" class="disp-block link-unimp">Electrical engineer apprentice</a>
                                    </div>
                                    <span>Express Circuits Ltd</span>
                                </td>
                                <td>
                                    <span class="tag-pending">For review</span>
                                </td>
                            </tr>
                            <tr class="va-middle">
                                <td>
                                    <div class="vac-title">
                                        <a href="submitted-apprenticeship.html" class="disp-block link-unimp">Engineering technician apprentice</a>
                                    </div>
                                    <span>Stechford Moulding Ltd </span>
                                </td>
                                <td>
                                    <span class="tag-submitted">Submitted</span>
                                </td>
                            </tr>
                            <tr class="va-middle">
                                <td>
                                    <div class="vac-title">
                                        <a href="draft-apprenticeship.html" class="disp-block link-unimp">Apprentice manufacturing/mechanical engineer</a>
                                    </div>
                                    <span>Aggregate Industries</span>
                                </td>
                                <td>
                                    <span class="tag-draft">Draft</span>
                                </td>
                            </tr>
                            <tr class="va-middle">
                                <td>
                                    <div class="vac-title">
                                        <a href="draft-apprenticeship.html" class="disp-block link-unimp">Structural engineering apprentice</a>
                                    </div>
                                    <span>Telephone Europe</span>
                                </td>
                                <td>
                                    <span class="tag-draft">Draft</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="page-navigation font-xsmall small-btm-margin">
                        <a href="#" class="page-navigation__btn previous disabled">
                            <i class="arrow-button fa fa-angle-left"></i>
                            <span class="description">Previous</span>
                            <span class="counter">1 of 2</span>
                        </a>
                        <a href="#" class="page-navigation__btn next">
                            <i class="arrow-button fa fa-angle-right"></i>
                            <span class="description">Next</span>
                            <span class="counter">2 of 2</span>
                        </a>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div class="grid grid-1-2">
        <section class="font-xsmall">
            <h2 class="heading-medium">Alerts</h2>
            <ul class="list-text list-withicons">
                <li>
                    <i class="fa fa-exclamation-circle the-icon"></i>You have 1 vacancy
                    closing soon with 0 applications <a href="" class="link-unimp inl-block">Apprentice precision toolmaker</a>
                </li>
                <li>
                    <i class="fa fa-flag the-icon"></i>You have 12 new applications
                    for the vacancy <a href="live-apprenticeship-summary.html" class="link-unimp inl-block">Mechanical Engineer - Precision Toolmaker</a>
                </li>
            </ul>
        </section>
        <section class="font-xsmall">
            <h2 class="heading-medium">Useful information</h2>
            <ul class="list-text">
                <li>
                    <a href="/recruitment/info-expect-from-employer.html">Responsibilities of the employer</a>
                </li>
                <li>
                    <a href="/recruitment/info-whos-involved.html">Who's involved in an apprenticeship?</a>
                </li>
                <li>
                    <a href="/recruitment/info-expect-from-apprentice.html">What to expect from your apprentice</a>
                </li>
                <li>
                    <a href="/recruitment/info-expect-from-provider.html">Responsibilities of the provider</a>
                </li>
                <li>
                    <a href="/recruitment/info-payments-and-funding.html">Payments and funding</a>
                </li>
                <li>
                    <a href="/recruitment/info-six-steps.html">How to employ an apprentice</a>
                </li>
            </ul>
        </section>
    </div>
</div>
