@using SFA.Apprenticeships.Web.Recruit.Constants
@model SFA.Apprenticeships.Web.Recruit.ViewModels.Admin.TransferVacanciesViewModel

@{
    ViewBag.Title = "TransferVacancies";
}

<h1 id="heading" class="heading-xlarge">Transfer Vacancies</h1>

@using (Html.BeginRouteForm(RecruitmentRouteNames.TransferVacancies))
{
    @Html.Partial("ValidationSummary", ViewData.ModelState)
    <div class="form-group">
        <fieldset class="form-group inline-fixed">
            @Html.FormTextFor(m => m.VacancyReferenceNumbers,
                controlHtmlAttributes: new { @class = "form-control-medium", type = "text" })
        </fieldset>

        <div class="form-group">
            <button type="submit" class="button">Confirm Details</button>
        </div>
    </div>

    if (Model != null && Model.VacanciesToBeTransferredVm != null && Model.VacanciesToBeTransferredVm.Any())
    {
        <div class="grid-wrapper">
            <div class="grid grid-1-1">
                <table>
                    <colgroup>
                        <col>
                        <col>
                        <col>
                        <col>
                    </colgroup>
                    <thead>
                        <tr>
                            <th>Select</th>
                            <th>Vacancy Reference Number</th>
                            <th>Provider Name</th>
                            <th>ProviderSite Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vacancyViewModel in Model.VacanciesToBeTransferredVm)
                        {
                            <tr>
                                <td></td>
                                <td>@vacancyViewModel.VacancyReferenceNumber</td>
                                <td>@vacancyViewModel.ProviderName</td>
                                <td>@vacancyViewModel.ProviderSiteName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    }
}