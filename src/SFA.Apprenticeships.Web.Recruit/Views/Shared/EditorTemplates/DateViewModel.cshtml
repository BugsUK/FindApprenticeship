@using SFA.Apprenticeships.Web.Common.Extensions
@using SFA.Apprenticeships.Web.Common.Validators.Extensions
@using SFA.Apprenticeships.Web.Common.ViewModels
@model DateViewModel

<div class="form-group @HtmlExtensions.GetValidationCssClass(Html.GetValidationType<DateViewModel,object>(m => m, m => m.Day, m => m.Month, m => m.Year))">
    <fieldset>
        <legend>
            <span class="form-label-bold">@Html.DisplayNameFor(m => m)</span>
            <span class="form-hint" id="example-dob-hint">@Model.GetMetadata(m => m).DisplayName</span>
            @Html.ValidationMessageWithSeverityFor(m => m, Html.GetValidationType(m => m))
            @Html.ValidationMessageWithSeverityFor(m => m.Day, Html.GetValidationType(m => m.Day))
            @Html.ValidationMessageWithSeverityFor(m => m.Month, Html.GetValidationType(m => m.Month))
            @Html.ValidationMessageWithSeverityFor(m => m.Year, Html.GetValidationType(m => m.Year))
        </legend>
        <div class="form-date">
            <div class="form-group form-group-day">
                <label class="form-label" for="example-dob-day">Day</label>
                @Html.TextBoxFor(m => m.Day, new { name = Html.NameFor(m => m).ToString().Replace(".", "_").ToLower(), type = "number", pattern = "[0-9]*", min = "0", max = "31" })
                @*<input class="form-control" id="example-dob-day" name="dob-day" type="number" pattern="[0-9]*" min="0" max="31" aria-describedby="example-dob-hint">*@
            </div>
            <div class="form-group form-group-month">
                <label class="form-label" for="example-dob-month">Month</label>
                @Html.TextBoxFor(m => m.Month, new { pattern = "[0-9]*", min = "0", max = "12" })
                @*<input class="form-control" id="example-dob-month" name="dob-month" type="number" >*@
            </div>
            <div class="form-group form-group-year">
                <label class="form-label" for="example-dob-year">Year</label>
                @Html.TextBoxFor(m => m.Year, new { pattern = "[0-9]*", min = "0" })
                @*<input class="form-control" id="example-dob-year" name="dob-year" type="number" >*@
            </div>
        </div>
    </fieldset>
</div>

