@model string

@if (!string.IsNullOrWhiteSpace(Model))
{
    <details class="open" open>
        <summary>@ViewData["Label"]</summary>
        <div class="detail-content qa-comment">
            <div class="blocklabel-single-container @Model.GetPreserveFormattingCssClass()">@Model</div>
        </div>
    </details>
}