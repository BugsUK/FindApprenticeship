@using SFA.Apprenticeships.Web.Recruit.Constants
@using Roles = SFA.Apprenticeships.Domain.Entities.Raa.Roles

@if (Request.IsAuthenticated)
{
    <div class="sfa-user-navigation">
        <a id="signout-link" href="@Url.RouteUrl(RecruitmentRouteNames.SignOut)"><i class="fa fa-sign-out"></i>Sign out</a>
    </div>
    <div class="sfa-navigation-items">
        @if (User.IsInRole(Roles.Admin))
        {
            <a id="adminLink" href="@Url.RouteUrl(RecruitmentRouteNames.AdminList)">Admin</a>
        }
        @if (User.IsInRole(Roles.VerifiedEmail) && (ViewBag.ShowHomeLink == null || ViewBag.ShowHomeLink))
        {
            <a id="applicationsLink" href="@Url.RouteUrl(RecruitmentRouteNames.RecruitmentHome)">Home</a>
        }
    </div>
}
else
{
    <a href="@Url.RouteUrl(RecruitmentRouteNames.SignIn)" id="loginLink" title="Sign in / Create account"><i class="fa fa-sign-in"></i>Sign in / Create account</a>
}
