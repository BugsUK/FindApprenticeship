@model VacancyViewModel

@using SFA.Apprenticeships.Domain.Entities.Raa.Vacancies
@using SFA.Apprenticeships.Web.Raa.Common.ViewModels.Vacancy

@{
    var editableItemClass = Model.IsEditable ? "editable-item" : "";
}

@Html.Partial("DisplayTemplates/Vacancy/_VacancyDetails", Model, new ViewDataDictionary { { "editableItemClass", editableItemClass } })

@if (Model.VacancyType == VacancyType.Traineeship)
{
    @Html.Partial("DisplayTemplates/Vacancy/_AboutTheEmployer", Model, new ViewDataDictionary { { "editableItemClass", editableItemClass } })
}
@if (Model.IsManageReviewerView)
{
    @Html.Partial("DisplayTemplates/Vacancy/_TrainingProvider", Model, new ViewDataDictionary { { "editableItemClass", editableItemClass } })
}

@Html.Partial("DisplayTemplates/Vacancy/_RequirementsAndProspects", Model, new ViewDataDictionary { { "editableItemClass", editableItemClass } })

@if (!Model.IsCandidateView)
{
    @Html.Partial("DisplayTemplates/Vacancy/_QuestionsForCandidates", Model, new ViewDataDictionary { { "editableItemClass", editableItemClass } })

}

@if (Model.VacancyType == VacancyType.Apprenticeship)
{
    @Html.Partial("DisplayTemplates/Vacancy/_AboutTheEmployer", Model, new ViewDataDictionary { { "editableItemClass", editableItemClass } })
}

@Html.Partial("DisplayTemplates/Vacancy/_OtherInformation", Model, new ViewDataDictionary { { "editableItemClass", editableItemClass } })

@Html.Partial("DisplayTemplates/Vacancy/_OfflineVacancy", Model, new ViewDataDictionary { { "editableItemClass", editableItemClass } })

@if (!Model.IsManageReviewerView)
{
    @Html.Partial("DisplayTemplates/Vacancy/_TrainingProvider", Model, new ViewDataDictionary { { "editableItemClass", editableItemClass } })
}


@Html.Partial("DisplayTemplates/Vacancy/_AboutTraineeships", Model.VacancyType)